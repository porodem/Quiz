<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="com.porodem.quiz.Quiz"
    android:background="@color/colorBlack">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/daedalus"
        android:id="@+id/mainImg"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/quest_mark"
            android:id="@+id/imagePicked2"
            android:background="@color/colorAccent"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/imagePicked1"
            android:layout_toStartOf="@+id/imagePicked1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/colorAccent"
            android:id="@+id/dummyForCenter"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/quest_mark"
            android:id="@+id/imagePicked1"
            android:background="@color/colorAlert"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/dummyForCenter"
            android:layout_toStartOf="@+id/dummyForCenter" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/quest_mark"
            android:id="@+id/imagePicked3"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/dummyForCenter"
            android:layout_alignStart="@+id/dummyForCenter" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/quest_mark"
            android:id="@+id/imagePicked4"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imagePicked3"
            android:layout_toEndOf="@+id/imagePicked3" />


    </RelativeLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">
        <TableRow
            android:layout_height="match_parent">
            <ImageButton
            android:layout_height="80dp"
                android:layout_width="80dp"
            android:text="test check answer"
            android:id="@+id/check1"
            android:onClick="click_check1"/>
            <ImageButton
                android:layout_weight="1"
                android:text="1"
                android:id="@+id/check2"
                android:onClick="click_check2"/>
        </TableRow>
        <TableRow
            android:layout_height="match_parent">

            <ImageButton
                android:layout_weight="1"
                android:text="1"
                android:id="@+id/check3"
                android:onClick="click_check3"/>
            <ImageButton
                android:layout_weight="1"
                android:text="1"
                android:id="@+id/check4"
                android:onClick="click_check4"/>

        </TableRow>
        <TableRow
            android:layout_height="200dp"
            android:layout_width="match_parent">
            <ImageButton
                android:layout_height="match_parent"
                android:text="1"
                android:id="@+id/check5"
                android:onClick="click_check5"/>
            <ImageButton
                android:layout_height="match_parent"
                android:text="1"
                android:id="@+id/check6"
                android:onClick="click_check6"/>
        </TableRow>
    </TableLayout>




</LinearLayout>






</RelativeLayout>
